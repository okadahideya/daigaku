<%= link_to 'Sign up', root_path, class: 'sign_title' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label '名前/name' %> <em>(漢字 or English)</em><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'カタカナ' %> <em>(or English)</em><br />
    <%= f.text_field :name_k, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'ブラウザ名/nickname' %> <br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '年齢/age' %> <br />
    <%= f.text_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '誕生日/birthday' %> <br />
    <%= f.date_select :birthday, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '大学名/university' %> <br />
    <%= f.text_field :university, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '学部/undergraduate' %> <br />
    <%= f.text_field :undergraduate, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '学科/study_subject' %> <br />
    <%= f.text_field :study_subject, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '何年生/grade'%> <br />
    <%= f.text_field :grade, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
