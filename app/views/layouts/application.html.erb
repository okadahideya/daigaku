<!DOCTYPE html>
<html>
  <head>
    <title>Daigaku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class='top-page-header'>
  <div class="sign">
    <ul class="sign-user">
      <% if user_signed_in? %>
        <li><%= link_to 'ログイン名','#', class: 'user-nickname' %></li>
        <li><%= link_to 'ログアウト', '#', class: 'logout' %></li>
      <% else %>
        <li><%= link_to 'ログイン', '#', class: 'login' %></li>
        <li><%= link_to '新規登録', '#', class: 'sign-up' %></li>
      <% end %>
    </ul>
  </div>
  </header>
    <%= yield %>
  </body>
</html>
